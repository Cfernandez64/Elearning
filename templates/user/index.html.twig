{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
    <h1>Liste de tous les utilisateurs</h1>
    <section class="user">
        <table class="w-100" cellpadding="10">
            <thead class="table-info">
                <tr>
                    <td>Nom</td>
                    <td>Prénom</td>
                    <td>Rôle</td>
                    <td>Voir</td>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr style="border:1px solid #ccc">
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.roles[0] }}</td>
                        <td>+</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
