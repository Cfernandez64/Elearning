{% extends 'base.html.twig' %}

{% block body %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">Home</li>
    <li class="breadcrumb-item">Tableau de bord de {{ app.user.firstname }} {{ app.user.lastname }}</li>
  </ol>
</nav>


{% for lesson in user.inLessons %}
  <h3 class="mt-5">{{ lesson.title }}</h3>
  <h5 class="mt-4 mb-3">Contenus associ√©s</h5>
  <table class="table table-hover">
      <thead>
      <tr class="table-primary">
          <th scope="col">Titre</th>
          <th scope="col">Progression</th>
      </tr>
      </thead>
      <tbody>
      {% for content in lesson.contents %}
      <tr>
        <td>{{ content.title }}</td>
        {% for contenu in user.advances %}
            {% if contenu.content == content %}
              <td>{{ contenu.percentage }} %</td>
            {% endif %}
        {% endfor %}
      </tr>
      {% endfor %}
      </tbody>
    </table>
  {% endfor %}





{% endblock %}
