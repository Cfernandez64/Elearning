{% extends 'base.html.twig' %}

{% block body %}
<article class="article">
  
  <h2>{{ article.title }}</h2>
  <img src="{{ article.image }}" alt="">
  <hr>
  <p>Crée le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} dans la catégorie {{ article.category.title }}</p>
  <p>
    {{ article.content | raw }}
  </p>
</article>

<section id="commentaires">
  {% for comment in article.comments %}
  <div class="comment">
    <div class="row">
      <div class="col-3">
        {{ comment.author }} (<small>{{ comment.createdAt | date('d/m/Y') }}</small>)
      </div>
      <div class="col-9">
        {{comment.content | raw }}
      </div>
    </div>
  </div>
  {% endfor %}
</section>

{% endblock %}
