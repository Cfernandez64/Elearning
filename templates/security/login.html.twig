{% extends 'base.html.twig' %}

{% block body %}

  <h1>
     Connexion
  </h1>

  {% form_theme form 'bootstrap_4_layout.html.twig' %}

  {{ form_start(form) }}

    {{ form_row(form.email, {'attr':{'placeholder':"Votre email"}}) }}
    {{ form_row(form.username, {'attr':{'placeholder':"Votre nom utilisateur"}}) }}
    {{ form_row(form.password, {'attr':{'placeholder':"Mot de passe"}})  }}
    {{ form_row(form.confirm_password, {'attr':{'placeholder':"Confirmez"}})  }}

    <button type="submit" class="btn btn-success" name="button">
      Inscription</button>

  {{ form_end(form) }}

{% endblock %}
