{% extends 'admin.html.twig' %}

{% block title %}Liste des cours{% endblock %}

{% block body %}


        <div class="row align-items-center justify-content-between border-bottom pb-4">
            <div class="col-4">
                <h2>Liste des formateurs</h2>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <div class="col-2 text-md-right text-center">
                    <a class="btn btn-danger" href="{{ path('formateur_create') }}">Ajouter un formateur</a>
                </div>
            {% endif %}
        </div>
        <table class="table table-hover">
            <thead>
            <tr class="table-primary">
                <th scope="col">Nom</th>
                <th scope="col">Pr√©nom</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for formateur in formateurs %}
            <tr>
                <td>
                    {{ formateur.nom }}
                </td>
                <td>{{ formateur.prenom }}</td>
                <td><a href="{{ path('formateur_edit', {id:formateur.id}) }}">Editer</a></td>
                <td><a href="{{ path('formateur_delete', {id:formateur.id}) }}">Supprimer</a></td>
            </tr>

            {% endfor %}

            </div>

{% endblock %}
