{% extends 'admin.html.twig' %}

{% block title %}Liste des exercices{% endblock %}

{% block body %}


    <div class="row align-items-center justify-content-between border-bottom pb-4">
        <div class="col-4">
            <h2>Liste des exercices</h2>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="col-2 text-md-right text-center">
                <a class="btn btn-danger" href="{{ path('exercice_create') }}">Ajouter un quiz</a>
            </div>
        {% endif %}
    </div>
    <table class="table table-hover">
        <thead>
        <tr class="table-primary">
            <th scope="col">Contenu associé à un exercice :</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        <tbody>
          {% for exo in exos %}
            <tr>
                <td><a href="{{ path('exercice_edit', {'id':exo.id}) }}">{{ exo.title }}</a></td>
                <td><a href="{{ path('exercice_edit', {'id':exo.id}) }}">Modifier</td>
                <td><a href="{{ path('exercice_delete', {'id':exo.id}) }}">Supprimer</a></td>
            </tr>
          {% endfor %}
        </div>

{% endblock %}
