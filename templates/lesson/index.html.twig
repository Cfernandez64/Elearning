{% extends 'base.html.twig' %}

{% block title %}Liste des cours{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1>Liste des cours</h1>

        {% for lesson in lessons %}
            <div class="card mt-3" id="cour-{{ lesson.id }}">
                <div class="card-body">
                    <h4 class="card-title">{{ lesson.title }}</h4>
                    <h6 class="card-subtitle mb-2 text-muted">Intervenant : {{ lesson.teacher }}</h6>
                    <p class="card-text"><small>Dur√©e du cours : {{ lesson.duration }}</small></p>
                    <a class="card-link" href="{{ path('lesson_show', {'id':lesson.id}) }}">Lire la suite</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
